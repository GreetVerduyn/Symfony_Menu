{#                    <div class="icon-box" data-aos="fade-up">#}
                        <div class="icon" {{dish.category}}"</div>
                        <h4 class="title"><a href="">{{dish.name}}</a></h4>
                        <img src="{{asset('images/' ~ dish.image)}}" alt="{{ dish.name}}">
                        <h5 class="description">{{dish.description}}   -  â‚¬ {{ dish.price}}</h5>
                        <p>OrderNr. {{dish.id}}</p>
                    </div>
